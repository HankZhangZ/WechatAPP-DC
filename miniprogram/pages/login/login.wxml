<!--miniprogram/pages/login/login.wxml-->
<view class="container">
  <view class="header">
    <image src="../../images/wx_login.png" mode="aspectFit"/>
  </view>
  <view>
    <input 
      class="username" 
      placeholder=" 请输入用户名" 
      value="{{  username }}" 
      bindinput="inputChangeHandle" 
      data-prop="username"/>
    <input 
      class="password" 
      type="password" 
      placeholder=" 请输入密码" 
      value="{{  password }}" 
      bindinput="inputChangeHandle" 
      data-prop="password"/> 
  </view>
  <view class="button_fpages" loading="true">
    <button type="primary" bindtap="btnToDo1">登录</button>
  </view>
  <view class="button_spages" loading="true">
    <button type="default" bindtap="btnToDo2">注册</button>
  </view>
</view>
